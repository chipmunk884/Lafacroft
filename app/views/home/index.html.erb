<div class="grid_8 alpha" id="homepageposts">
	<% @posts.each do |post| %>
		<div class="post" id="<%= post.id %>">
				<div class="title"><%= h post.title %></div>
				<div class="dateauthor">Posted on <%= post.date.strftime('%m/%d/%Y') %> by <%= h post.author %></div>
				<div class="content"><%= post.content %></div>
		</div>
	<% end %>
</div>
<div class="grid_4 omega" id="homesidebar">
	<div id="search">
		<form>
			<span class="sidebartitle">Search TI-Nspire Files</span>
			<input type="text" />
			<input type="submit" value="Search!" />
		</form>
	</div><br />
	<div id="latestfiles">
		<span class="sidebartitle">Latest Files</span><br />
		<% @files.each do |file| %>
			<%= link_to file.title, "downloads/" + file.file_url, :confirm => "Do you want to download the file " + file.title + "?" %>
			<br />
		<% end %>
	</div>
	<div id="popularlinks">
		<span class="sidebartitle">Popular Links</span><br />
