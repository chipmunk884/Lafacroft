<h1>Listing of Posts - <%= link_to 'New post', new_admin_post_path %></h1>
<% @posts.each do |post| %>
  	<div class="post" id="<%= post.id %>">
		<h1 class="title"><%= link_to h(post.title), [:admin, post] %> - <%= link_to 'Edit', edit_admin_post_path(post) %> - <%= link_to 'Delete', [:admin, post], :confirm => 'Are you sure?', :method => :delete %></h1>
		<h4 class="dateauthor">Posted on <%= post.created_at.strftime('%m/%d/%Y') %> by <%= h post.author %> - Type: <%= h post.post_type %></h4>
		<p class="content"><%= post.content %></p>
	</div>
<% end %>